<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SkyBooker.Views.AirportPage">

    <StackLayout>
        <!-- Display Airport Information -->
        <Label Text="{Binding Airport.Name}" FontSize="20" />
        <Label Text="{Binding Airport.Code}" FontSize="16" />
        <Label Text="{Binding Airport.Location}" FontSize="16" />
        <Label Text="{Binding Airport.DepartingFlights.Count}" FontSize="16" />
    </StackLayout>
</ContentPage>

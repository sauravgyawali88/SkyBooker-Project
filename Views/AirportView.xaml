<Window x:Class="SkyBooker.Views.AirportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Airport Information" Height="300" Width="400">

    <Grid>
        <!-- Display Airport Information -->
        <TextBlock Text="{Binding Airport.Name}" FontSize="20" Margin="10" />
        <TextBlock Text="{Binding Airport.Code}" FontSize="16" Margin="10,40,10,10" />
        <TextBlock Text="{Binding Airport.Location}" FontSize="16" Margin="10,70,10,10" />
        <TextBlock Text="{Binding Airport.DepartingFlights.Count}" FontSize="16" Margin="10,100,10,10" />
    </Grid>
</Window>
